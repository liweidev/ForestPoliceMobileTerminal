<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="mydialogstyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/signature_save_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="list">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.61</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="list_title">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="list_content">
        <item name="android:textSize">12sp</item>
        <item name="android:lines">2</item>
         <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
	<style name="list_image">
	    <item name="android:layout_width">70dip</item>
	    <item name="android:layout_height">70dip</item>
	    <item name="android:gravity">center</item>
	    <item name="android:src">@drawable/ic_launcher</item>
	</style>    
	
	<style name="main_menu_image">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	<style name="main_menu_LinearLayout">
	      <item name="android:layout_width">wrap_content</item>
          <item name="android:layout_height">wrap_content</item>
          <!-- <item name="android:layout_marginLeft">10dp</item> -->
          <!-- <item name="android:padding">10dp</item> -->
          <!-- <item name="android:orientation">vertical</item> -->
          <item name="android:gravity">center</item>
	</style>
	<style name="alarming_query_list">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
</style>
	<style name="main_menu_text">
	    <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
	</style>
	
</resources>
