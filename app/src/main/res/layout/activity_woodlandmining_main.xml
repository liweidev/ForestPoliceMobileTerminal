<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >
    
<EditText
        android:id="@+id/etSpecificLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="@string/specificlocation"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="11"
        android:padding="5dp"
        android:singleLine="true" />

<Spinner
        android:id="@+id/spMiningType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:spinnerMode="dialog" />

<EditText
        android:id="@+id/etMiningArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="@string/miningarea"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:maxLength="11"
        android:padding="5dp"
        android:singleLine="true" />

<EditText
        android:id="@+id/etFallimentiDello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="@string/fallimentidello"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="11"
        android:padding="5dp"
        android:singleLine="true" />

<EditText
        android:id="@+id/etAllowUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="@string/allowunit"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="11"
        android:padding="5dp"
        android:singleLine="true" />
</LinearLayout>
