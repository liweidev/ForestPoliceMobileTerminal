<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >
    
    
    <Spinner
        android:id="@+id/spLinMood_Unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:spinnerMode="dialog" />


    <EditText
        android:id="@+id/etLinMood_Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="@string/number"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:padding="5dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etLinMood_Area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/area"
        android:imeOptions="actionNext"
        android:padding="5dp"
        android:singleLine="true" />

     <Spinner
            android:id="@+id/spLinMood_ForestTypes"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spLinMood_LandTypes"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:spinnerMode="dialog" />
        
         <Spinner
            android:id="@+id/spLinMood_Forestownership"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spLinMood_Landownership"
           	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:spinnerMode="dialog" />
    

</LinearLayout>