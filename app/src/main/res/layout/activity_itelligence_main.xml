<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >
    
    <com.yhkj.yhsx.forestpolicemobileterminal.widget.DateAndTimeInputEditText
        android:id="@+id/etItelligenceCollectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="@string/itelligence_time"
        android:padding="5dp" />
    
    <Spinner
        android:id="@+id/spItelligencePolice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:spinnerMode="dialog" />
    
    <EditText
        android:id="@+id/etItelligenceSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="@string/itelligence_source"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="11"
        android:padding="5dp"
        android:singleLine="true" />
    
    <Spinner
        android:id="@+id/spItelligenceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:spinnerMode="dialog" />
    
    <EditText
        android:id="@+id/etItelligenceAbstract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/itelligence_abstract"
        android:inputType="textMultiLine"
        android:lines="4"
        android:padding="5dp" />
        
        <EditText
        android:id="@+id/etItelligenceReportUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="@string/itelligence_unit"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="11"
        android:padding="5dp"
        android:singleLine="true" />
    
     <com.yhkj.yhsx.forestpolicemobileterminal.widget.DateInputEditText
        android:id="@+id/etItelligenceReportTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="@string/itelligences_time"
        android:padding="5dp" />
    

</LinearLayout>
